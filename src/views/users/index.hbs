<div class="container">
    <h2>{{title}}</h2>
    
    {{#if users.length}}
    <div class="user-list">
        {{#each users}}
        <div class="user-item">
            <a href="/users/{{this.userId}}" class="user-link">
                <div class="user-info">
                    <h3 class="user-name">{{this.username}}</h3>
                    <p class="user-email">{{this.email}}</p>
                </div>
                <div class="user-meta">
                    <span class="user-role">{{this.role}}</span>
                    <span class="user-status {{#if (eq this.status ../userStatus.ACTIVE)}}active{{else}}inactive{{/if}}">
                        {{#if (eq this.status ../userStatus.ACTIVE)}}Active{{else}}Inactive{{/if}}
                    </span>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p>{{t 'error.userNotFound' }}</p>
    {{/if}}

    {{!-- Pagination controls --}}
    <nav aria-label="Page navigation">
      <div class="flex">
        {{#if (gt currentPage 1)}}
        <div class="pagination-button">
          <a href="/users?page={{subtract currentPage 1}}" class="btn-lg">
          {{ t 'menu.previous' }}
          </a>
        </div>
        {{/if}}
        <div class="pagination-button">
          <a href="/users?page={{add currentPage 1}}" class="btn-lg">
          {{ t 'menu.next' }}
          </a>
        </div>
      </div>
    </nav>
</div> 

<style>
.container {
    width: 80%;
    margin: 0 auto;
}

.user-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-bottom: 30px;
}

.user-item {
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
    background-color: #f9f9f9;
    transition: background-color 0.3s ease;
}

.user-item:hover {
    background-color: #e9ecef;
}

.user-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.user-info {
    flex-grow: 1;
}

.user-name {
    font-size: 1.5rem;
    margin: 0;
}

.user-email {
    font-size: 1rem;
    color: #666;
}

.user-meta {
    text-align: right;
}

.user-role {
    font-size: 1rem;
    font-weight: bold;
}

.user-status {
    display: block;
    font-size: 0.9rem;
    margin-top: 5px;
}

.user-status.active {
    color: green;
}

.user-status.inactive {
    color: red;
}
</style>
