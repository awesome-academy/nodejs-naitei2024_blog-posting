<div class="auth-form">
  <form method="POST" action="register">
    <div class="form-group">
      <label for="username">{{ t 'content.username' }} <span class="text-danger">*</span></label>
      <input type="text" name="username" id="username" class="form-control item" placeholder="Username (at least 3 characters)" value="{{user.username}}">
      {{#each input_errors}}
        {{#if (eq this.property 'username')}}
          {{#each constraints}}
            <li class="li text-danger">{{t this}}</li>
          {{/each}}
        {{/if}}
      {{/each}}
    </div>
    <div class="form-group">
      <label for="email">{{ t 'content.email' }} <span class="text-danger">*</span></label>
      <input type="text" name="email" id="email" class="form-control item" placeholder="example@domain" value="{{user.email}}">
      {{#each input_errors}}
        {{#if (eq this.property 'email')}}
          {{#each constraints}}
            <li class="li text-danger">{{t this}}</li>
          {{/each}}
        {{/if}}
      {{/each}}
    </div>
    <div class="form-group">
      <label for="password">{{ t 'content.pwd' }} <span class="text-danger">*</span></label>
      <input type="password" name="password" id="password" class="form-control item" placeholder="Password (at least 8 characters)" value="{{user.password}}">
      {{#each input_errors}}
        {{#if (eq this.property 'password')}}
          {{#each constraints}}
            <li class="li text-danger">{{t this}}</li>
          {{/each}}
        {{/if}}
      {{/each}}
    </div>
    <div class="form-group">
      <label for="confirm_password">{{ t 'content.confirmPwd' }}<span class="text-danger">*</span></label>
      <input type="password" name="confirm_password" id="confirm_password" class="form-control item" placeholder="Confirm Password" value="">
      {{#each input_errors}}
        {{#if (eq this.property 'confirm_password')}}
          {{#each constraints}}
            <li class="li text-danger">{{t this}}</li>
          {{/each}}
        {{/if}}
      {{/each}}
      {{#if other_errors}}
        <li class="li text-danger">{{t other_errors}}</li>
      {{/if}}
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-block create-account">{{ t 'menu.register' }}</button>
    </div>
  </form>
</div>
