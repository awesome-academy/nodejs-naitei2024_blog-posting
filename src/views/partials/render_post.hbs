<!-- Dynamically Rendered Posts -->
<div class="posts-container">
  {{#each posts}}
  <div class="post-row" onclick="window.location.href='/posts/detail/{{postId}}'">
    <div class="post-image">
      {{#if imageUrl}}
        <img src="{{imageUrl}}" alt="Blog Image">
      {{else}}
        <div class="no-image">{{t 'content.noImage'}}</div>
      {{/if}}
    </div>
    <div class="post-content">
      <div class="post-meta">
        <span> {{ t 'postedBy'}} <a href="/users/{{user.userId}}" onclick="event.stopPropagation();">{{user.username}}</a></span>
      </div>
      <div class="post-title">
        <h3>{{{title}}}</h3>
      </div>
      <div class="post-preview">
        <p>{{#truncate content 500}}{{/truncate}}...</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
