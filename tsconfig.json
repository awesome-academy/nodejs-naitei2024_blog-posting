{
    "compilerOptions": {
        "target": "es6", 
        "module": "commonjs", 
        "outDir": "./dist", 
        "strict": true, 
        "esModuleInterop": true, 
        "skipLibCheck": true, 
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
